  <div class="small-12 large-8 small-centered">
    <%= form_for(@boat) do |f| %>
      <div class="boat-form">
        <div class="field">
          <%= f.label :boat_year %> <br />
          <%= f.text_field :boat_year %>
        </div>
        <div class="field">
          <%= f.label :boat_make %> <br />
          <%= f.text_field :boat_make %>
        </div>
        <div class="field">
          <%= f.label :boat_model %> <br />
          <%= f.text_field :boat_model %>
        </div>
        <div class="field">
          <%= f.label :engine_year %> <br />
          <%= f.text_field :engine_year %>
        </div>
        <div class="field">
          <%= f.label :engine_make %> <br />
          <%= f.text_field :engine_make %>
        </div>
        <div class="field">
          <%= f.label :engine_model %> <br />
          <%= f.text_field :engine_model %>
        </div>
        <div class="field">
          <%= f.label :engine_hours %> <br />
          <%= f.text_field :engine_hours %>
        </div>
        <div class="field">
          <%= f.label :length %> <br />
          <%= f.text_field :length %>
        </div>
        <div class="field">
          <%= f.label :photo %> <br />
          <%= f.text_field :photo %>
        </div>
        <div class="field">
          <%= f.label :video %> <br />
          <%= f.text_field :video %>
        </div>
